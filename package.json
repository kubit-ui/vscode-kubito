{
  "name": "vscode-kubito",
  "displayName": "Kubito - Your Coding Companion",
  "description": "An interactive and animated companion for your VS Code editor. Kubito walks around, jumps and shows programming messages that adapt to time and day, including productivity stats and reminders.",
  "version": "2.6.1",
  "publisher": "Kubit",
  "author": {
    "name": "Kubit",
    "url": "https://kubit-ui.web.app/"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kubit-ui/vscode-kubito.git"
  },
  "bugs": {
    "url": "https://github.com/kubit-ui/vscode-kubito/issues"
  },
  "homepage": "https://github.com/kubit-ui/vscode-kubito#readme",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "pet",
    "companion",
    "kubito",
    "kubit",
    "fun",
    "interactive",
    "animation",
    "coding companion",
    "productivity",
    "entertainment",
    "webview",
    "sidebar"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "icon": "icon.png",
          "id": "kubito",
          "name": "Kubito",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "kubito.show",
        "title": "Show Kubito"
      },
      {
        "command": "kubito.hide",
        "title": "Hide Kubito"
      },
      {
        "command": "kubito.openEventSettings",
        "title": "Kubito: Configure Event Reactions"
      },
      {
        "command": "kubito.showMetrics",
        "title": "Kubito: Show Productivity Metrics"
      },
      {
        "command": "kubito.enableChristmasMode",
        "title": "Kubito: Enable Christmas Mode"
      },
      {
        "command": "kubito.disableChristmasMode",
        "title": "Kubito: Disable Christmas Mode"
      }
    ],
    "configuration": {
      "title": "Kubito",
      "properties": {
        "kubito.autoShow": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show Kubito when opening VS Code"
        },
        "kubito.language": {
          "type": "string",
          "enum": [
            "auto",
            "en",
            "es",
            "fr",
            "de",
            "pt",
            "it",
            "ja",
            "ko",
            "zh-cn",
            "ru",
            "nl",
            "pl",
            "tr",
            "ar"
          ],
          "enumDescriptions": [
            "Detect from VS Code language",
            "English",
            "Español",
            "Français",
            "Deutsch",
            "Português",
            "Italiano",
            "日本語",
            "한국어",
            "中文(简体)",
            "Русский",
            "Nederlands",
            "Polski",
            "Türkçe",
            "العربية"
          ],
          "default": "auto",
          "description": "Language for Kubito messages"
        },
        "kubito.contextualMessages": {
          "type": "boolean",
          "default": true,
          "description": "Show time and day-appropriate messages (e.g., 'Monday Blues' on Monday mornings, 'Working Late' in the evening)"
        },
        "kubito.christmasMode": {
          "type": "string",
          "enum": [
            "auto",
            "enabled",
            "disabled"
          ],
          "enumDescriptions": [
            "Automatically enable during December",
            "Always show Christmas decorations",
            "Never show Christmas decorations"
          ],
          "default": "auto",
          "description": "Control Christmas theme with snowflakes and lights"
        },
        "kubito.events.fileSave": {
          "type": "boolean",
          "default": true,
          "description": "Show reactions when saving files"
        },
        "kubito.events.gitCommit": {
          "type": "boolean",
          "default": true,
          "description": "Show reactions when making Git commits"
        },
        "kubito.events.gitPush": {
          "type": "boolean",
          "default": true,
          "description": "Show reactions when pushing to Git remotes"
        },
        "kubito.productivity.reminders": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart reminders for breaks, water, and active pauses"
        },
        "kubito.productivity.breakInterval": {
          "type": "number",
          "default": 30,
          "minimum": 15,
          "maximum": 120,
          "description": "Minutes between break reminders (15-120)"
        },
        "kubito.productivity.waterInterval": {
          "type": "number",
          "default": 45,
          "minimum": 20,
          "maximum": 180,
          "description": "Minutes between water reminders (20-180)"
        },
        "kubito.productivity.showMetrics": {
          "type": "boolean",
          "default": true,
          "description": "Show coding metrics like lines written and session time"
        },
        "kubito.productivity.metricsInterval": {
          "type": "number",
          "default": 60,
          "minimum": 30,
          "maximum": 300,
          "description": "Minutes between metrics updates (30-300)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./",
    "compile:webview": "tsc -p ./src/webview/",
    "watch": "npm run watch:extension & npm run watch:webview",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "tsc -watch -p ./src/webview/",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "clean": "rm -rf out"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.38.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}

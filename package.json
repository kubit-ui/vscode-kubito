{
  "name": "vscode-kubito",
  "displayName": "Kubito - Your Coding Companion",
  "description": "An interactive and animated companion for your VS Code editor. Kubito walks around, responds to clicks, and shows motivational messages to keep you company while coding.",
  "version": "0.1.1",
  "publisher": "Kubit",
  "author": {
    "name": "Kubit",
    "url": "https://kubit-ui.web.app/"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kubit-ui/vscode-kubito.git"
  },
  "bugs": {
    "url": "https://github.com/kubit-ui/vscode-kubito/issues"
  },
  "homepage": "https://github.com/kubit-ui/vscode-kubito#readme",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "pet",
    "companion",
    "kubito",
    "kubit",
    "fun",
    "interactive",
    "animation",
    "coding companion",
    "productivity",
    "entertainment",
    "webview",
    "sidebar"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "icon": "icon.png",
          "id": "kubito",
          "name": "Kubito",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "kubito.show",
        "title": "Show Kubito"
      },
      {
        "command": "kubito.hide",
        "title": "Hide Kubito"
      }
    ],
    "configuration": {
      "title": "Kubito",
      "properties": {
        "kubito.autoShow": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show Kubito when opening VS Code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./",
    "compile:webview": "tsc -p ./src/webview/",
    "watch": "npm run watch:extension & npm run watch:webview",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "tsc -watch -p ./src/webview/",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "clean": "rm -rf out"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.38.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}

{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-var": "error",
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "eqeqeq": "error",
    "curly": "error",
    "no-console": "warn"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["src/webview/**/*.ts"],
      "env": {
        "browser": true,
        "node": false
      },
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["src/test/**/*.ts"],
      "env": {
        "mocha": true,
        "node": true
      },
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": ["out/", "node_modules/", "*.js", "*.d.ts", "vscode-kubito-*.vsix"]
}

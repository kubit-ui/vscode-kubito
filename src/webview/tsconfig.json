{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "../../media",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "rootDir": "./",

    // DOM-specific settings
    "strict": true,

    // Relaxed settings for webview context
    "noUncheckedIndexedAccess": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
